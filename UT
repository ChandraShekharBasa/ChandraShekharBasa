import React from 'react';
import PropTypes from 'prop-types';

const VideoPlayer = ({
  src,
  type = 'video/mp4',
  controls = true,
  autoplay = false,
  loop = false,
  muted = false,
  className = '',
  poster = '',
}) => (
  <video
    className={className}
    controls={controls}
    autoPlay={autoplay}
    loop={loop}
    muted={muted}
    poster={poster}
    style={{ maxWidth: '100%', maxHeight: '100%' }}
  >
    <source src={src} type={type} />
    Your browser does not support the video tag.
  </video>
);

VideoPlayer.propTypes = {
  src: PropTypes.string.isRequired,     // Source of the video file
  type: PropTypes.string,               // Type of the video (default is 'video/mp4')
  controls: PropTypes.bool,             // Show video controls (default is true)
  autoplay: PropTypes.bool,             // Auto play video (default is false)
  loop: PropTypes.bool,                 // Loop video (default is false)
  muted: PropTypes.bool,                // Mute video (default is false)
  className: PropTypes.string,          // Custom class name
  poster: PropTypes.string,             // Poster image for video
};

export default VideoPlayer;




import React from 'react';
import VideoPlayer from './VideoPlayer';

const App = () => (
  <div>
    <h1>My Video Player</h1>
    <VideoPlayer
      src="https://www.example.com/path-to-your-video.mp4"
      controls={true}
      autoplay={false}
      loop={false}
      muted={false}
      poster="https://www.example.com/path-to-poster-image.jpg"
      className="my-custom-video-class"
    />
  </div>
);

export default App;
